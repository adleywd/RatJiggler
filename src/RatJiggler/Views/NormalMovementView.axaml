<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RatJiggler.ViewModels"
             x:Class="RatJiggler.Views.NormalMovementView"
             x:DataType="vm:NormalMovementViewModel">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Movement Inputs -->
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Movement Configuration"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="MediumPurple"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- X and Y Movement -->
                <Label Content="X Movement (pixels):"
                       Grid.Row="0" Grid.Column="0"
                       Margin="5" HorizontalAlignment="Right" />
                <TextBox Text="{Binding MoveX}" Width="100"
                         Grid.Row="0" Grid.Column="1"
                         Margin="5" HorizontalAlignment="Left" />

                <Label Content="Y Movement (pixels):"
                       Grid.Row="1" Grid.Column="0"
                       Margin="5" HorizontalAlignment="Right" />
                <TextBox Text="{Binding MoveY}" Width="100"
                         Grid.Row="1" Grid.Column="1"
                         Margin="5" HorizontalAlignment="Left" />

                <!-- Duration -->
                <Label Content="Duration (seconds):"
                       Grid.Row="2" Grid.Column="0"
                       Margin="5" HorizontalAlignment="Right" />
                <TextBox Text="{Binding Duration}" Width="100"
                         Grid.Row="2" Grid.Column="1"
                         Margin="5" HorizontalAlignment="Left" />
            </Grid>
        </StackPanel>

        <!-- Back/Forth Toggle -->
        <CheckBox IsChecked="{Binding BackAndForth}"
                  Content="Enable Back and Forth Movement"
                  Grid.Row="1"
                  Margin="5"
                  HorizontalAlignment="Left" />
        
        <!-- Settings Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Command="{Binding SaveSettingsCommand}"
                    Content="Save Settings"
                    Width="120"/>
            <Button Command="{Binding RestoreDefaultsCommand}"
                    Content="Restore Defaults"
                    Width="120"/>
        </StackPanel>
        
        <!-- Movement Control Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Width="200" Command="{Binding StartMovementCommand}">
                <Button.Content>
                    <TextBlock TextAlignment="Center">
                        <Run Text="Start Mouse Movement" />
                        <LineBreak />
                        <Run Text="(Ctrl + R)" />
                    </TextBlock>
                </Button.Content>
            </Button>
            <Button Width="200" Command="{Binding StopMovementCommand}">
                <Button.Content>
                    <TextBlock TextAlignment="Center">
                        <Run Text="Stop Mouse Movement" />
                        <LineBreak />
                        <Run Text="(Ctrl + C)" />
                    </TextBlock>
                </Button.Content>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
