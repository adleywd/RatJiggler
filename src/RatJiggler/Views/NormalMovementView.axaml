<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RatJiggler.ViewModels"
             x:Class="RatJiggler.Views.NormalMovementView"
             x:DataType="vm:NormalMovementViewModel">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Movement Settings -->
        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Mouse Movement Settings"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="MediumPurple"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- X and Y Movement -->
                <Label Content="ⓘ Horizontal movement amount:"
                       Grid.Row="0" Grid.Column="0"
                       Margin="5" HorizontalAlignment="Right" 
                       ToolTip.Tip="How far left/right the mouse will move (in pixels)"/>
                <TextBox Text="{Binding MoveX}" Width="100"
                         Grid.Row="0" Grid.Column="1"
                         Margin="5" HorizontalAlignment="Left" />

                <Label Content="ⓘ Vertical movement amount:"
                       Grid.Row="1" Grid.Column="0"
                       Margin="5" HorizontalAlignment="Right" 
                       ToolTip.Tip="How far up/down the mouse will move (in pixels)"/>
                <TextBox Text="{Binding MoveY}" Width="100"
                         Grid.Row="1" Grid.Column="1"
                         Margin="5" HorizontalAlignment="Left" />

                <!-- Duration -->
                <Label Content="ⓘ Time for each movement:"
                       Grid.Row="2" Grid.Column="0"
                       Margin="5" HorizontalAlignment="Right" 
                       ToolTip.Tip="How long it takes to complete one movement (in seconds)"/>
                <TextBox Text="{Binding Duration}" Width="100"
                         Grid.Row="2" Grid.Column="1"
                         Margin="5" HorizontalAlignment="Left" />
            </Grid>
        </StackPanel>

        <!-- Back/Forth Toggle -->
        <CheckBox IsChecked="{Binding BackAndForth}"
                  Content="ⓘ Alternate movement directions"
                  Grid.Row="1"
                  Margin="5"
                  HorizontalAlignment="Left"
                  ToolTip.Tip="When enabled: Mouse moves right then left (repeating). When disabled: Mouse keeps moving in the same direction."/>

        <!-- Settings Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Command="{Binding SaveSettingsCommand}"
                    Content="Save Settings"
                    Width="120"
                    ToolTip.Tip="Save your current settings for next time"/>
            <Button Command="{Binding RestoreDefaultsCommand}"
                    Content="Reset to Defaults"
                    Width="120"
                    ToolTip.Tip="Restore all settings to their original values"/>
        </StackPanel>
        
        <!-- Movement Control Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Width="200" Command="{Binding StartMovementCommand}">
                <Button.Content>
                    <TextBlock TextAlignment="Center">
                        <Run Text="Start Moving Mouse" />
                        <LineBreak />
                        <Run Text="(Press Ctrl + R)" />
                    </TextBlock>
                </Button.Content>
            </Button>
            <Button Width="200" Command="{Binding StopMovementCommand}">
                <Button.Content>
                    <TextBlock TextAlignment="Center">
                        <Run Text="Stop Mouse Movement" />
                        <LineBreak />
                        <Run Text="(Press Ctrl + C)" />
                    </TextBlock>
                </Button.Content>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>