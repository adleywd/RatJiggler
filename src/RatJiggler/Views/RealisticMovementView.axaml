<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:RatJiggler.ViewModels"
             x:Class="RatJiggler.Views.RealisticMovementView"
             x:DataType="vm:MainWindowViewModel">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel Spacing="10">
                <!-- Speed Configuration -->
                <TextBlock Text="Speed Configuration"
                           FontSize="14"
                           FontWeight="Bold" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="Min Speed (1-10):"
                           Grid.Row="0" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding MinSpeed}" Width="100"
                             Grid.Row="0" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />

                    <Label Content="Max Speed (1-10):"
                           Grid.Row="1" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding MaxSpeed}" Width="100"
                             Grid.Row="1" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />
                </Grid>

                <!-- Pause Configuration -->
                <TextBlock Text="Pause Configuration"
                           FontSize="14"
                           FontWeight="Bold"
                           Margin="0,10,0,0" />

                <CheckBox IsChecked="{Binding EnableStepPauses}"
                          Content="Enable Step Pauses"
                          Margin="5" HorizontalAlignment="Left" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="Step Pause Min (ms):"
                           Grid.Row="0" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding StepPauseMin}" Width="100"
                             Grid.Row="0" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />

                    <Label Content="Step Pause Max (ms):"
                           Grid.Row="1" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding StepPauseMax}" Width="100"
                             Grid.Row="1" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />
                </Grid>

                <!-- Random Pause Configuration -->
                <CheckBox IsChecked="{Binding EnableRandomPauses}"
                          Content="Enable Random Pauses"
                          Margin="5" HorizontalAlignment="Left" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="Random Pause Probability (0-100):"
                           Grid.Row="0" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding RandomPauseProbability}" Width="100"
                             Grid.Row="0" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />

                    <Label Content="Random Pause Min (ms):"
                           Grid.Row="1" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding RandomPauseMin}" Width="100"
                             Grid.Row="1" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />

                    <Label Content="Random Pause Max (ms):"
                           Grid.Row="2" Grid.Column="0"
                           Margin="5" HorizontalAlignment="Right" />
                    <TextBox Text="{Binding RandomPauseMax}" Width="100"
                             Grid.Row="2" Grid.Column="1"
                             Margin="5" HorizontalAlignment="Left" />
                </Grid>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="10"
                            Margin="0,20,0,0">
                    <Button Content="Run Realistic (Ctrl + R)"
                            Command="{Binding StartRealisticMovementCommand}"
                            Width="150" Height="30" />
                    <Button Content="Stop (Ctrl + C)"
                            Command="{Binding StopMovementCommand}"
                            Width="150" Height="30" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>